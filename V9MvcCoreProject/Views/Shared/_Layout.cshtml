    <script>
        const sidebar = document.getElementById("sidebar");
        const toggleBtn = document.getElementById("toggleSidebar");
        const body = document.body;
        const themeBtn = document.getElementById("toggleTheme");

        // 🧭 Sidebar toggle
        toggleBtn.addEventListener("click", () => {
            sidebar.classList.toggle("open");
        });

        // 🌙 Night mode (persistent)
        const savedTheme = localStorage.getItem("theme");
        if (savedTheme === "dark") {
            body.classList.add("dark-mode");
            themeBtn.innerHTML = `<i class="fa fa-sun-o"></i>`;
        }

        themeBtn.addEventListener("click", () => {
            const isDark = body.classList.toggle("dark-mode");
            localStorage.setItem("theme", isDark ? "dark" : "light");
            themeBtn.innerHTML = isDark
                ? `<i class="fa fa-sun-o"></i>`
                : `<i class="fa fa-moon-o"></i>`;
        });

                // Expand/Collapse submenus
        document.querySelectorAll('.menu-item.has-submenu > .menu-link').forEach(link => {
            link.addEventListener('click', (e) => {
                e.preventDefault();
                const parent = link.parentElement;
                parent.classList.toggle('open');

                // Close other open menus (optional)
                document.querySelectorAll('.menu-item.has-submenu').forEach(item => {
                    if (item !== parent) item.classList.remove('open');
                });
            });
        });

                document.addEventListener("DOMContentLoaded", function () {
            document.querySelectorAll(".kt-menu__toggle").forEach(function (toggle) {
                toggle.addEventListener("click", function () {
                    const parent = this.closest(".kt-menu__item--submenu");
                    parent.classList.toggle("open");
                });
            });
        });
    </script>

